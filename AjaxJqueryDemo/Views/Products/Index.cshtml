<table id="productsTable" class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.FilePath)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.storage)</th>
            <th>@Html.DisplayNameFor(model => model.create_date)</th>
            <th>@Html.DisplayNameFor(model => model.update_date)</th>
            <th>@Html.DisplayNameFor(model => model.Category.Name)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <!-- Table rows will be added here by Ajax -->
    </tbody>
</table>

<div id="loadingMore">
    <button id="loadMoreButton" class="btn btn-primary">Load more data</button>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var pageNumber = 1;
            var pageSize = 3;
            var isLoading = false;
            var hasMoreData = true;

            function loadMoreData() {
                if (isLoading || !hasMoreData) return;

                isLoading = true;
                $.ajax({
                    url: '@Url.Action("LoadMore", "Products")',
                    type: 'GET',
                    data: { page: pageNumber, size: pageSize },
                    success: function (data) {
                        if (data.length > 0) {
                            var rows = '';
                            $.each(data, function (index, item) {
                                rows += '<tr>' +
                                    '<td>' + item.Name + '</td>' +
                                    '<td><img width="100" height="100" src="/Content/images/Products/' + item.FilePath + '" alt="Product Image" /></td>' +
                                    '<td>' + item.Price + '</td>' +
                                    '<td>' + item.Description + '</td>' +
                                    '<td>' + item.storage + '</td>' +
                                    '<td>' + new Date(item.create_date).toLocaleDateString() + '</td>' +
                                    '<td>' + new Date(item.update_date).toLocaleDateString() + '</td>' +
                                    '<td>' + item.CategoryName + '</td>' +
                                    '<td>' +
                                    '<a href="/Products/Edit/' + item.id + '">Edit</a> | ' +
                                    '<a href="/Products/Details/' + item.id + '">Details</a> | ' +
                                    '<a href="/Products/Delete/' + item.id + '">Delete</a>' +
                                    '</td>' +
                                    '</tr>';
                            });

                            $('#productsTable tbody').append(rows);
                            pageNumber++;

                            if (data.length < pageSize) {
                                hasMoreData = false;
                                $('#loadMoreButton').hide();
                            }
                        } else {
                            hasMoreData = false;
                            $('#loadMoreButton').hide();
                        }

                        isLoading = false;
                    },
                    error: function () {
                        alert('Error loading data');
                        isLoading = false;
                    }
                });
            }

            $('#loadMoreButton').click(function () {
                loadMoreData();
            });

            // Initial load
            loadMoreData();
        });
    </script>
}