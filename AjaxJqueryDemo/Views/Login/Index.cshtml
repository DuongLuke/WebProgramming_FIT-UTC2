
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@model EF_DBFirstApproachDemo.user_shop
@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-md-3 col-md-offset-4">
        <div style="border:2px black ridge; padding:10px;">
            @using (Html.BeginForm())
            {
                <table height="200">
                    <tr>
                        <th colspan="2" class="text-center" style="font-size:15px;">LOGIN</th>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.username)</td>
                        <td>@Html.TextBoxFor(model => model.username, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.username, "", new {@clas="text-danger", @style="color:red;"})
                        </td>

                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.password)</td>
                        <td>
                            @Html.EditorFor(model => model.password, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.password, "", new { @clas = "text-danger",@style = "color:red;" })
                            
                                            </td>

                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="submit" name="login" value="Login" class="btn btn-info"></td>
                    </tr>
                    <tr>
                        <p style="color:red;font-weight:bold;">@ViewBag.ErrorMessage</p>
                    </tr>

                </table>
            }
        </div>

    </div>

</div>