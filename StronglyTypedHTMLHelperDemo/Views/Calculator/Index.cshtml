@model StronglyTypedViewDemo.Models.Calculator
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    <p>@Html.LabelFor(model => model.num1) &nbsp; @Html.TextBoxFor(model => model.num1)</p>
    <p>@Html.LabelFor(model => model.num2) &nbsp; @Html.TextBoxFor(model => model.num2)</p>
    <input type="submit" value="Submit"/>
    <p>Addition Result is: @ViewBag.result</p>
}
