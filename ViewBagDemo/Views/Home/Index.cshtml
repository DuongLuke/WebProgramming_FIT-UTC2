
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h2>THIS IS THE INDEX PAGE WITH FIRST ACTION METHOD</h2>
        <h2>@ViewBag.Message</h2>
        <h2>@ViewBag.CurrentTime</h2>
    </div>
    <div>
        <ul>
            @{
            foreach (string i in ViewBag.FruitArray){
                <li>@i</li>
            }

            }
        </ul>
        <hr />
        <ul>
            @{
     foreach (string i in ViewBag.SportList){
                <li>@i</li>
     }

            }
        </ul>
        <hr />
        @{
        var a = ViewBag.Employee;
            <p>@a.EmpId</p>
            <p>@a.EmpName</p>
            <p>@a.EmpDept</p>
        }

        <hr />
        @{
            <h3 style="color:red">@ViewBag.Message1</h3>
            <h3 style="color:red">@ViewData["Message1"]</h3>
        }
    </div>
</body>
</html>
